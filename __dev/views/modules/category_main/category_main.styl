.category-main
	position relative
	margin-bottom 20px
	&:before
		content ''
		display block
		position absolute
		bottom 0
		left 0
		width 100%
		height 1px
		z-index 2
		background $BODY_BG
	&-item
		float left
		display block
		width 50%
		text-align center
		border-bottom 1px solid $LIGHT_GREY
		color $FONT_COLOR
		font-size 36px
		font-weight 700
		border-box()
		padding 26px 15px
		&:nth-child(even)
			border-left 1px solid $LIGHT_GREY
		+below($default)
			font-size 20px
			white-space nowrap
		+below($rebuild)
			border-left 0
			padding 20px 10px

	&-wrapper
		content-center(100%, 72px)
		margin-bottom 20px
		+below($rebuild)
			margin-bottom 10px
		> img
			top inherit