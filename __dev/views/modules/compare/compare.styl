.compare
	margin 0 -31px
	overflow hidden
	overflow-x auto
	+below($rebuild)
		margin 0 -16px
	&-wrapper
		position relative
		min-width 900px
	&-products
		border-radius 5px
		margin-bottom 15px
		border-box()
		border 1px solid $LIGHT_GREY
	&-item
		width 300px
		float left
		position relative
		border-box()
		&.__products
			position relative
			padding 46px 30px 20px
			& + &
				border-left 1px solid $LIGHT_GREY
			p
				margin 0
				line-height normal
	&-remove
		position: absolute;
		top: 15px;
		right: 15px;
		z-index: 2;
		background: url("./images/icons/close-small.png") no-repeat;
		display: block;
		width: 32px;
		height: 32px;
		cursor: pointer;
	&-option
		margin-bottom 30px
		padding 30px

		+below($rebuild)
			padding 0 15px

		&-title
			margin-bottom 10px
		&-wrapper
			background #f9f9f9
			text-align center
			padding 30px 0
			font-size 28px
			line-height normal
			margin 0 -29px
			+below($rebuild)
				font-size 18px
				padding 15px 0
				margin 0 -14px
		&-item
			position relative
			& + &
				&:before
					content ''
					height 40px
					width 1px
					background #cfcfcf
					display block
					position absolute
					top 50%
					margin-top -20px
					left -1px
					+below($rebuild)
						height 20px
						margin-top -10px
	&-check
		size(49px)
		display inline-block
		background url('./images/icons/check-in.png') no-repeat
	&-none
		size(49px)
		display inline-block
		background url('./images/icons/none.png') no-repeat